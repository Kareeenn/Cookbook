<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxWidth="-Infinity" minWidth="-Infinity" prefWidth="424.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cookbook.Controller.AddUserSceneController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label alignment="TOP_LEFT" text="Add New User">
         <font>
            <Font name="System Bold" size="23.0" />
         </font>
      </Label>
      <VBox spacing="10.0">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Name:" />
                  <Region HBox.hgrow="ALWAYS" />
                  <TextField maxWidth="-Infinity" minWidth="-Infinity" prefWidth="300.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Username:" />
                  <Region HBox.hgrow="ALWAYS" />
                  <TextField maxWidth="-Infinity" minWidth="-Infinity" prefWidth="300.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Password:" />
                  <Region HBox.hgrow="ALWAYS" />
                  <TextField maxWidth="-Infinity" minWidth="-Infinity" prefWidth="300.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <CheckBox mnemonicParsing="false" text="Admin" />
               </children>
            </HBox>
         </children>
      </VBox>
      <HBox spacing="10.0">
         <children>
            <Region HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" text="Add User" />
            <Button fx:id="closeButton" mnemonicParsing="false" onAction="#cancelClicked" text="Cancel" />
         </children>
      </HBox>
   </children>
</VBox>
