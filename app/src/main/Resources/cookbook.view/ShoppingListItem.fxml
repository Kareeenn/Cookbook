<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<HBox onMouseClicked="#ingredientClicked" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="400.0" spacing="2.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cookbook.Controller.ShoppingListItemController">
    <children>
        <Text fx:id="ingredientName" strokeType="OUTSIDE" strokeWidth="0.0" text="tomato">
            <font>
                <Font size="14.0" />
            </font>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
         <HBox.margin>
            <Insets bottom="5.0" left="10.0" top="5.0" />
         </HBox.margin>
        </Text>
      <Region prefWidth="300.0" />
      <Text fx:id="ingredientAmount" strokeType="OUTSIDE" strokeWidth="0.0" text="300">
            <font>
                <Font size="14.0" />
            </font>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
         <HBox.margin>
            <Insets bottom="5.0" top="5.0" />
         </HBox.margin>
        </Text>
      <Text fx:id="ingredientUnit" strokeType="OUTSIDE" strokeWidth="0.0" text="g">
         <font>
            <Font size="14.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <HBox.margin>
            <Insets bottom="5.0" top="5.0" />
         </HBox.margin>
      </Text>
    </children>
</HBox>
