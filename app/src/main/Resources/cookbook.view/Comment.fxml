<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<HBox spacing="10" style="-fx-border-width: 1; -fx-border-color: #aaa; -fx-border-radius: 8;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cookbook.Controller.CommentController">
    <padding>
        <Insets bottom="8" left="8" right="8" top="8" />
    </padding>
    <VBox spacing="2.0" HBox.hgrow="ALWAYS">
        <Text fx:id="usernameText" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 13px; -fx-font-weight: bold;" text="Username" />
      <TextFlow>
         <children>
              <Text fx:id="commentText" strokeType="OUTSIDE" strokeWidth="0.0" text="Comment text here..." />
         </children>
      </TextFlow>
    </VBox>
    <VBox alignment="CENTER_RIGHT" minWidth="54.0" spacing="5.0">
      <Text fx:id="editButton" fill="BLUE" onMouseClicked="#handleEditAction" strokeType="OUTSIDE" strokeWidth="0.0" text="Edit">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Text>
      <Text fx:id="deleteButton" fill="RED" onMouseClicked="#handleDeleteAction" strokeType="OUTSIDE" strokeWidth="0.0" text="Delete">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Text>
    </VBox>
</HBox>
