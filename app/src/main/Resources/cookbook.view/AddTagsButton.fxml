<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<StackPane onMouseClicked="#addCustomTags" style="-fx-border-color: blue; -fx-border-radius: 4; -fx-border-width: 1;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cookbook.Controller.AddTagsButtonController">
   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" text="+ Add Custom Tags">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
   </children>
   <padding>
      <Insets bottom="2.0" left="5.0" right="5.0" top="2.0" />
   </padding>
   <cursor>
      <Cursor fx:constant="HAND" />
   </cursor>
</StackPane>
