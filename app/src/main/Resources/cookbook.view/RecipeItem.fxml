<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane alignment="BOTTOM_LEFT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onMouseClicked="#recipeClicked" prefHeight="192.0" prefWidth="192.0" style="-fx-background-color: ffff;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cookbook.Controller.RecipeItemController">
   <children>

      <!-- ImageView for displaying the recipe photo, with default image setup -->
      <ImageView fx:id="recipeImageView" fitHeight="192.0" fitWidth="192.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../../../../../Downloads/Best-Rice-Pudding.jpg" />
         </image>
      </ImageView>


      <!-- Text for displaying the recipe name -->
      <Text fx:id="recipeNameText" fill="WHITE" stroke="BLACK" strokeType="OUTSIDE" strokeWidth="0.5" text="Text">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
         <StackPane.margin>
            <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
         </StackPane.margin>
      </Text>

      <!-- Label for displaying search hits or tags -->
      <Label fx:id="searchHitsLabel" alignment="TOP_LEFT" text="tags" textFill="#32b200">
         <font>
            <Font name="System Bold" size="9.0" />
         </font>
         <StackPane.margin>
            <Insets bottom="30.0" left="10.0" right="10.0" />
         </StackPane.margin>
      </Label>

      <!-- Label for displaying tags specifically -->
      <Label fx:id="tagsLabel" textFill="#32b200" alignment="TOP_RIGHT">
         <font>
            <Font size="9.0" />
         </font>
         <StackPane.margin>
            <Insets top="10.0" right="10.0" />
         </StackPane.margin>
      </Label>

   </children>
</StackPane>
