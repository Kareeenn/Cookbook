<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox onMouseClicked="#helpItemClicked" spacing="5.0" style="-fx-border-color: #aaa; -fx-border-radius: 8;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cookbook.Controller.HelpItemController">
   <children>
      <Text fx:id="helpTitle" strokeType="OUTSIDE" strokeWidth="0.0" text="How to add a recipe">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Text>
      <Text strokeType="OUTSIDE" fx:id="helpDescription" strokeWidth="0.0" text="If you want to add a recipe, first click the Add Recipe + button on the top right." />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <cursor>
      <Cursor fx:constant="HAND" />
   </cursor>
</VBox>
